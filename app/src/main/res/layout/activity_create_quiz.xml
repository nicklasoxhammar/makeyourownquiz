<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/newQuizMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    <EditText
        android:id="@+id/quizNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:maxLength="30"
        android:hint="Quiz Name" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/questions_recycler_view"
            android:layout_below="@+id/quizNameEditText"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="@color/recyclerViewBackground"
            />

    <Button
        android:id="@+id/addQuestionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/createButtonsBuffer"
        android:onClick="addQuestion"
        android:text="Add Question" />

        <Button
            android:id="@+id/createButtonsBuffer"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:clickable="false"
            />

    <Button
        android:id="@+id/createQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/createButtonsBuffer"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:onClick="createQuiz"
        android:text="Create Quiz" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/newQuestionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <EditText
            android:id="@+id/newQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:inputType="text"
            android:maxLength="100"
            android:hint="Question?" />

        <EditText
            android:id="@+id/newQuestionAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newQuestionTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:ems="15"
            android:maxLength="100"
            android:hint="Write the correct answer here."
            android:inputType="text" />

        <EditText
            android:id="@+id/newQuestionAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newQuestionAnswer1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="15"
            android:maxLength="100"
            android:hint="Answer 2"
            android:inputType="text" />

        <EditText
            android:id="@+id/newQuestionAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newQuestionAnswer2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="15"
            android:maxLength="100"
            android:hint="Answer 3"
            android:inputType="text" />

        <EditText
            android:id="@+id/newQuestionAnswer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newQuestionAnswer3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="15"
            android:hint="Answer 4"
            android:maxLength="100"
            android:inputType="text" />

        <Button
            android:id="@+id/newQuestionDoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/newQuestionAnswer4"
            android:layout_below="@+id/newQuestionAnswer4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:layout_alignParentStart="true"
            android:onClick="createNewQuestion"
            android:text="Done" />

        <Button
            android:id="@+id/newQuestionCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/newQuestionAnswer4"
            android:layout_marginRight="70dp"
            android:onClick="cancelNewQuestion"
            android:text="Cancel" />


    </RelativeLayout>


</RelativeLayout>